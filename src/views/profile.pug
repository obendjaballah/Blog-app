doctype html
html(lang='en')
  head
    link(href='css/bootstrap.min.css' type='text/css' rel='stylesheet')
    link(href='css/bootstrap-theme.min.css' type='text/css' rel='stylesheet')
  body
    .mainbody.container-fluid
      .row
        .navbar-wrapper
          .container-fluid
            .navbar.navbar-inverse.navbar-static-top(role='navigation')
              .container-fluid
                .navbar-header
                  a.navbar-brand(href='./ORqmj', style='margin-right:-8px; margin-top:-5px;')
                    img(alt='Brand', src='https://lut.im/7trApsDX08/GeilMRp1FIm4f2p7.png', width='30px', height='30px')
                  a.navbar-brand(href='./ORqmj') BLOG*
                .navbar-collapse.collapse
                  ul.nav.navbar-nav
                    li
                      a(href='/profile') My Wall
                    li
                      a(href='/allposts') Posts
                    
                  ul.nav.navbar-nav.navbar-right
                    li
                      a(href='/logout') Log out

        .col-lg-9.col-md-9.col-sm-12.col-xs-12
          .panel.panel-default
            .panel-body
              span
                h1.panel-title.pull-left(style='font-size:30px;')
                  | #{fullName} 

              br
              hr
              form.form-group#postForm
                textarea.form-control#postInput(name='post', rows='5', placeholder="What's on your mind?")
                br
                button.btn.btn-info(type='submit') Post

          hr#addAfter

          each post in posts
            .col-xs-12
              .panel.panel-default
                .panel-body
                  blockquote
                    h3 #{post.content}
                    footer #{fullName} <small>#{post.createdAt}</small>
                  hr
                  

                  form#cmntForm.form-group(action='/comment' ,method='post' )
                    input(name="postId", type="hidden" value=post.id)
                    textarea#cmntInput.form-control(name='comment', rows='1', placeholder='Comment')
                    br
                    button.btn.btn-info(type='submit') Comment
                    hr
                    each comment in post.comments
                      .detailBox
                        .actionBox
                          ul.commentList
                            li
                              .commentText
                                p #{comment.account.firstname} 
                                p #{comment.content}
                                span.date.sub-text #{comment.createdAt}
                                hr
          hr

    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/profile.js')